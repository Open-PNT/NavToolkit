# https://editorconfig.org

root = true

[*.{h,c}{,pp}]
end_of_line = lf
insert_final_newline = true
indent_style = tab
trim_trailing_whitespace = true

[*.py]
end_of_line = lf
insert_final_newline = true
indent_style = space
trim_trailing_whitespace = true

[meson.build]
end_of_line = lf
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

[*.yml]
end_of_line = lf
indent_size = 2
indent_style = space
trim_trailing_whitespace = true
insert_final_newline = true
